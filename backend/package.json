{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "E-commerce platform backend",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "npm install && npx prisma generate",
    "dev": "nodemon src/index.js",
    "setup": "node scripts/setup-env.js",
    "setup:dev": "node scripts/setup-env.js dev",
    "setup:prod": "node scripts/setup-env.js prod",
    "setup:railway": "node scripts/setup-env.js railway",
    "env:validate": "node scripts/setup-env.js validate",
    "env:preset": "node env.presets.js",
    "urls:cleanup": "node scripts/update-urls.js",
    "docker:dev": "node scripts/docker-manager.js dev",
    "docker:prod": "node scripts/docker-manager.js prod",
    "docker:db": "node scripts/docker-manager.js db",
    "docker:monitor": "node scripts/docker-manager.js monitor",
    "docker:utils": "node scripts/docker-manager.js utils",
    "db:migrate": "node scripts/optimize-db.js migrate",
    "db:analyze": "node scripts/optimize-db.js analyze",
    "db:optimize": "node scripts/optimize-db.js optimize",
    "db:backup": "node scripts/optimize-db.js backup",
    "db:seed": "node scripts/optimize-db.js seed",
    "db:schema": "node scripts/optimize-db.js schema",
    "docs:generate": "node scripts/generate-api-docs.js",
    "perf:analyze": "node scripts/optimize-performance.js analyze",
    "perf:optimize": "node scripts/optimize-performance.js optimize",
    "perf:monitor": "node scripts/optimize-performance.js monitor",
    "perf:report": "node scripts/optimize-performance.js report",
    "errors:test": "node scripts/test-errors.js",
    "errors:docs": "node scripts/test-errors.js docs",
    "demo": "node demo-test.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "jest --testPathPattern=security",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "monitor": "node scripts/monitor.js",
    "monitor:continuous": "node scripts/monitor.js --continuous",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:production": "node scripts/deploy.js production",
    "optimize": "node scripts/optimize-performance.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:scan": "node scripts/security-scan.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "follow-redirects": "^1.15.9",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
