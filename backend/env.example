# =============================================================================
# CommerFlow Environment Configuration
# =============================================================================
# This file contains all possible environment variables for the CommerFlow platform.
# Copy this file to .env and adjust values as needed for your environment.
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Development: postgresql://username:password@localhost:5432/commerceflow
# Production: postgresql://user:pass@host:5432/database
# Railway: postgresql://postgres:${PASSWORD}@${HOST}:${PORT}/${DATABASE}
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/commerceflow"

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# JWT secret key (CHANGE IN PRODUCTION!)
JWT_SECRET="portfolio-demo-secret"
JWT_EXPIRES_IN="24h"
JWT_ISSUER="commerflow-api"
JWT_AUDIENCE="commerflow-users"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Environment: development, production, test
NODE_ENV="development"
# Server port
PORT=3001
# Frontend URL for CORS
FRONTEND_URL="http://localhost:3000"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS origin (use * for demo, specific URL for production)
CORS_ORIGIN="*"
# Rate limiting (15 minutes window, max requests per IP)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# ADMIN CONFIGURATION (Portfolio Demo)
# =============================================================================
# Default admin credentials for easy portfolio access
# WARNING: These are demo credentials - change in production!
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Cache TTL in milliseconds (5 minutes)
CACHE_TTL=300000
# Maximum file upload size (10MB)
MAX_FILE_SIZE=10485760
# File upload path
UPLOAD_PATH="/uploads"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL="info"
# Log format: combined, common, dev, short, tiny
LOG_FORMAT="combined"

# =============================================================================
# MONITORING & METRICS
# =============================================================================
# Enable performance metrics
ENABLE_METRICS=true
# Metrics server port
METRICS_PORT=9090

# =============================================================================
# REDIS CACHING (Optional)
# =============================================================================
# Redis connection URL (uncomment if using Redis)
# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD=""

# =============================================================================
# SSL/HTTPS CONFIGURATION (Production Only)
# =============================================================================
# SSL certificate paths (uncomment for HTTPS)
# SSL_KEY_PATH="/etc/ssl/private/server.key"
# SSL_CERT_PATH="/etc/ssl/certs/server.crt"

# =============================================================================
# DEPLOYMENT PLATFORMS
# =============================================================================
# Railway specific variables (auto-populated by Railway)
# PASSWORD=
# HOST=
# DATABASE=

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Uncomment for development debugging
# DEBUG=*
# NODE_OPTIONS="--inspect" 